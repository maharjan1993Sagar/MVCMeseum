@model IEnumerable<Meseum.Models.Inventory>

@{
    ViewBag.Title = "Index";
}
@section styles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <script src="~/scripts/jquery-3.3.1.min.js"></script>
        <script src="~/scripts/bootstrap.min.js"></script>*@
    <link href="~/Admin/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
    <style type="text/css">
        .video-frame {
            width: 100%;
            height: 195px;
            border: 4px solid #dc3545;
            box-shadow: 1px 2px 3px #dc3545;
            border-radius: 3px;
        }

        .title {
            font-weight: 500;
            font-size: 14px;
            text-align: center;
            margin-bottom: 10px;
            margin-top: 10px;
            background-color: #dc3545;
            color: white;
            box-shadow: 1px 2px 4px #dc3545;
        }
    </style>
}
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div style="overflow-x:scroll;">
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObjectCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OriginOf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MadeBy)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Material)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ObjectCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OriginOf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MadeBy)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    <a id="btnUpload" data-id="@item.Id" data-toggle="modal" data-target="#myModal">Upload</a>|
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Upload File</h4>
            </div>
            @using (Html.BeginForm("Upload", "Inventories", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input id="txtId" name="Id" type="hidden" />
                <div class="row">
                    <label class="text text-danger" id="txtError"></label>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Images</label>
                            <input type="file" name="Image" multiple />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Audio</label>
                            <input type="file" name="Audio" multiple />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Video</label>
                            <input type="file" name="Video" multiple />
                        </div>
                    </div>

                    <div class="col-md-3">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            }

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
<div class="row">
    <table id="tblAudio" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>File Size(MB)</th>
                <th>Play Audio</th>
            </tr>
        </thead>
        <tbody>
            @*@foreach (var item in Model)
                {*@
            <tr>

                <td>2</td>
                <td>2</td>
                <td>2</td>
                <td>
                    <audio controls>
                        <source src="~/Admin/Images/Inventories/2/Audio/2.mp3" type="audio/ogg">
                    </audio>
                </td>

            </tr>
            @* }*@
        </tbody>
    </table>

</div>

<div class="row">
    @*@foreach (var item in Model)
        {*@
    @for (int i = 0; i < 5; i++)
    {
        <div class="col-sm-4 col-md-4 col-xs-12">
            <div class="title">2</div>
            <div class="video-frame">
                <video style="width:100%; height:auto;" controls>
                    <source src="~/Admin/Images/Inventories/2/Video/2.mp4" type="video/mp4" />
                </video>
            </div>
        </div>
    }
    @*}*@
</div>  
@section Scripts{


    <script src="~/Admin/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/Admin/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script>
        $(document).ready(function () {
            $("body table tbody tr td a#btnUpload").click(function () {
                $("#txtId").val($(this).attr("data-id"));
                $('#myModal').modal('show');
            })
            $('#tblAudio').DataTable();

            $("audio").on("play", function () {
                $("audio").not(this).each(function (index, audio) {
                    audio.pause();
                });
            });
        })
    </script>
}
