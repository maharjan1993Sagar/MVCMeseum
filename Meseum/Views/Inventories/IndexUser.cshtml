@model IEnumerable<Meseum.Models.Inventory>

@{


    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Inventories
            </div>
            <div class="panel-body">

                <div style="overflow-x:scroll;">
                    <table class="table table-bordered" id="tblData">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Category.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Location.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Material)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ObjectCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.size)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OriginOf)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MadeBy)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Location.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Material)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ObjectCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.size)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OriginOf)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MadeBy)
                                    </td>

                                    <td>

                                        @Html.ActionLink("Details", "DetailsUser", new { id = item.Id }, new { @class = "btn btn-default" })

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        </div>
    </div>
        @section scripts{
            <link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
            <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
            <script>
                $(function () {
                    $("body #tblData").DataTable();
                })
            </script>
        }
