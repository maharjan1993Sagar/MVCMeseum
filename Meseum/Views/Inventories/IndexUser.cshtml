@model IEnumerable<Meseum.Models.Inventory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutArt.cshtml";
}
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Inventories
                </h1>
                <p class="text-white link-nav"><a href="@Url.Action("index", "Home")">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="@Url.Action("IndexUser", "Inventories")"> Inventories</a></p>
            </div>
        </div>
    </div>
</section>

<!-- Start blog Area -->
<section class="blog-area section-gap" id="blog">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-70 col-lg-8">
                <div class="title text-center">
                    <h1 class="mb-10">Inventories</h1>
                    <p>Watch our inventory store on patan Museum</p>
                </div>
            </div>
        </div>
        <div class="row">
        
                @if (Model != null)
                {
                   
                    foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-md-6 single-blog">
                            <div class="thumb">
                                @if (item.Files.Any())
                                {

                                    <img onerror="this.onerror=null;this.src='/Admin/notfound.jpg'" class="img-fluid" src="@Url.Content(item.Files.FirstOrDefault(m => m.Type == "Image").path)" alt="" style="height:174px;width:255px;">
                                }
                                else
                                {
                                    <img class="img-fluid" src="~/Admin/notfound.jpg" alt="" style="height:174px;width:255px;">

                                }



                            </div>
                            @*  <p class="date">@item.UpdatedAt.ToString("dd MMM yyyy")</p>*@
                            <a href="@Url.Action("DetailsUser","Inventories")?id=@item.Id">
                                <h4>
                                    @item.Name.ToString().Substring(0, item.Name.Length <= 50 ? item.Name.Length : 50)
                                </h4>
                            </a>
                            <p>
                                Category:&nbsp;&nbsp;   @item.Category.Name<br />
                                Location:&nbsp;&nbsp;   @item.Location.Name
                            </p>



                        </div>
                        }
                    }
        </div>
    </div>
</section>
