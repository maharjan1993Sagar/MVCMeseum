@model Meseum.Models.Article

@{
    ViewBag.Title = "Create";
}

<div class="card">
    <div class="card-header py-3">
        <h3 class="m-1 font-weight-bold center text-primary">Articles</h3>
    </div>
    <div class="card-body">

        @using (Html.BeginForm("Create", "Articles", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.Category)

                    @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>File</label>
                    <input type="file" name="Image" id="ImgFile" />
                </div>
            </div>
            <div class="col-md-12" style="text-align:center; padding-top:15px;">

                <input type="submit" value="Create" class="btn btn-success" />
            </div>
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
