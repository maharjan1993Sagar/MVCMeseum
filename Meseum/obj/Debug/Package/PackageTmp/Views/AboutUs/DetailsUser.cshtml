@model Meseum.Models.AboutUs
@{
    Layout = "~/Views/Shared/_LayoutArt.cshtml";
}
<!-- start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    About Us
                </h1>
                <p class="text-white link-nav"><a href="@Url.Action("index","Home")">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="@Url.Action("DetailsUser","AboutUs")"> About Us</a></p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- End quote Area -->
<!-- Start about info Area -->
<section class="section-gap info-area" id="about">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-40 col-lg-8">
                <div class="title text-center">
                    <h1 class="mb-10">Few words about our Museum</h1>
                    <p>Get some knowledge on patan museum.</p>
                </div>
            </div>
        </div>
        <div class="single-info row mt-40">
            <div class="col-lg-6 col-md-12 mt-120 text-center no-padding info-left">
                <div class="info-thumb">
                    <img  src="@Url.Content(Model.File.path)" class="img-fluid" alt="">
                </div>
            </div>
            <div class="col-lg-6 col-md-12 no-padding info-rigth">
                <div class="info-content" style=" word-wrap: break-word;">
                    <h2 class="pb-30">
                        @Model.Name

                    </h2>
                    @Html.Raw(Model.Details)
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End about info Area -->
