@model Meseum.ViewModel.HomeVM
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div id="myCarousel" class="carousel slide banner" data-ride="carousel">
